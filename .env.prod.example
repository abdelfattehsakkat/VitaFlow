# Variables d'environnement pour la production
# À configurer sur le serveur de production

# GitHub (pour docker-compose.prod.yml)
GITHUB_REPOSITORY=votre-username/vitaflow
VERSION=main

# MongoDB (IMPORTANT: Changer ces valeurs en production!)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=CHANGEZ_MOI_EN_PRODUCTION_MOT_DE_PASSE_FORT
MONGO_DB=cabinet
MONGO_PORT=27018

# Backend (IMPORTANT: Générer un JWT_SECRET fort!)
BACKEND_PORT=3001
JWT_SECRET=CHANGEZ_MOI_EN_PRODUCTION_UTILISEZ_UNE_LONGUE_CHAINE_ALEATOIRE_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGEZ_MOI_EN_PRODUCTION_AUTRE_CHAINE_ALEATOIRE_DIFFERENTE_MIN_32_CHARS
JWT_EXPIRES_IN=7d
# URL du frontend (pour CORS)
FRONTEND_URL=http://localhost:80

# Frontend
FRONTEND_PORT=80
# URL de l'API backend (IMPORTANT: Remplacer par l'IP/domaine de votre serveur)
VITE_API_URL=http://localhost:3001/api
# Clé API OpenWeatherMap (optionnel - pour la météo)
# Obtenez une clé gratuite sur: https://openweathermap.org/api
VITE_OPENWEATHER_API_KEY=YOUR_API_KEY_HERE
